# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vibe

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3005
NODE_ENV=development

# Encryption Master Secret (generate a secure random string)
# You can generate one with: openssl rand -hex 32
VIBE_MASTER_SECRET=your-secret-key-here-change-this

# S3/MinIO Configuration (for file storage)
S3_HOST=localhost
S3_PORT=9000
S3_USE_SSL=false
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=vibe-files
S3_PUBLIC_URL=http://localhost:9000/vibe-files

# GitHub Integration (optional - leave empty if not using)
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=
GITHUB_REDIRECT_URL=
GITHUB_WEBHOOK_SECRET=

# ElevenLabs API (optional - for voice features)
ELEVENLABS_API_KEY=

# Monitoring (optional)
METRICS_ENABLED=true
METRICS_PORT=9090

# Development/Debugging (optional)
DANGEROUSLY_LOG_TO_SERVER_FOR_AI_AUTO_DEBUGGING=
